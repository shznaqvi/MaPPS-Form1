<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#5b040d" android:gradientRadius="460" android:shape="rectangle" android:startColor="@color/colorPrimary" android:type="radial" />
            <solid android:color="@color/colorPrimary"></solid>

            <!-- view border color and width -->
            <stroke android:width="1dp" android:color="@color/colorPrimary"></stroke>

            <!-- The radius makes the corners rounded -->
            <corners android:radius="2dp"></corners>
        </shape>
    </item>
</selector>