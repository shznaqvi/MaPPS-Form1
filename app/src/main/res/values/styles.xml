<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:editTextStyle">@style/textInput</item>
        <item name="android:textViewStyle">@style/txtquestion</item>
        <item name="android:radioButtonStyle">@style/radiobutton</item>
        <item name="android:checkboxStyle">@style/checkbox</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="myheading">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#191360</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#591505f4</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingBottom">20sp</item>
        <item name="android:paddingTop">20sp</item>
    </style>

    <style name="checkbox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:background">#d6d6d6</item>
        <item name="android:padding">4dp</item>


    </style>


    <style name="SpinnerItem">
        <item name="android:textAppearance">@style/SpinnerItemText</item>
    </style>

    <style name="SpinnerItemText">
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:colorBackground">#FFFFFF</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:colorBackground">#FFFFFF</item>
    </style>

    <style name="txtquestion" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">#191360</item>
        <item name="android:paddingBottom">20sp</item>
        <item name="android:paddingTop">20sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:typeface">serif</item>


    </style>

    <style name="BackgroundStyle" parent="android:Widget.ScrollView">
        <item name="android:background">#efefef</item>
    </style>

    <style name="textInput" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">#bababa</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="radiogroup">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">#efefef</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:padding">16dp</item>

    </style>

    <style name="radiobutton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@android:drawable/btn_radio</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:background">#bababa</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="btn">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#c1c4e9</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#272256</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">20sp</item>

    </style>
</resources>